<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ADCE6"
    android:orientation="vertical"
    tools:context=".BrowseActivity">

    <TextView
        android:id="@+id/LyricsSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Song name:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/placeHolderSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="placeholderSong"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/LyricsArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Artist:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/placeholderArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="placeholderArtist"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:text="Lyrics:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/placeholderLyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="vertical"
        android:text="placeholderText"
        android:textSize="20sp" />

</LinearLayout>